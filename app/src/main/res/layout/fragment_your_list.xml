<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.YourListFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rect_blue"
        android:padding="15dp">
        <ImageView
            android:id="@+id/img_back"
            android:visibility="visible"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_back_white"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gueldman caves"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/metropolis_medium"
            android:textSize="@dimen/text_14"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/img_add"
            android:visibility="visible"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_add_black"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            />
        <ImageView
            android:id="@+id/img_search"
            android:visibility="visible"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_search_white"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/layout_search">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/rounded_not_fill_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dimen_10"
                    android:paddingEnd="@dimen/dimen_10">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_search_gray"/>
                </LinearLayout>

                <EditText
                    android:padding="10dp"
                    android:id="@+id/edt_search"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/search"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_12"
                    android:fontFamily="@font/metropolis_regular"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_yourlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        />
    <TextView
        android:visibility="gone"
        android:id="@+id/txt_yourlist_notdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/you_are_currently_not_added_your_list"
        android:textSize="@dimen/home_title"
        android:fontFamily="@font/metropolis_semibold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="50dp"
        />

</LinearLayout>