<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rect_blue"
        android:padding="15dp">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_back_white"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shopping"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/metropolis_medium"
            android:textSize="@dimen/text_14"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_share_white"
            android:layout_gravity="center" />

    </LinearLayout>

    <ScrollView
        android:layout_below="@id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_bg"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_180"
                android:src="@drawable/img_yourlist_demo"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_margin="3dp"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:elevation="5dp"
                        android:background="@drawable/white_circle"
                        android:layout_alignParentRight="true"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_pin_red"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txt_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ceclla Chapman 711-2880 nulla SL Mankato MissIssippl 96522"
                        android:textSize="@dimen/home_subtitle"
                        android:fontFamily="@font/metropolis_regular"
                        android:textColor="@color/colorBlack"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_margin="3dp"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:elevation="5dp"
                        android:background="@drawable/white_circle"
                        android:layout_alignParentRight="true"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_car_front"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="23 min"
                        android:textSize="@dimen/home_subtitle"
                        android:fontFamily="@font/metropolis_regular"
                        android:textColor="@color/colorBlack"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_margin="3dp"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:elevation="5dp"
                        android:background="@drawable/white_circle"
                        android:layout_alignParentRight="true"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_global_red"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txt_site"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="www.Abc.com"
                        android:textSize="@dimen/home_subtitle"
                        android:fontFamily="@font/metropolis_regular"
                        android:textColor="@color/colorBlack"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_desc"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/metropolis_regular"
                    android:textSize="@dimen/text_12"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
                    android:layout_gravity="start"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:id="@+id/layout_direction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/shape_blue"
                    android:layout_gravity="center"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="@dimen/dimen_12"
                    android:paddingBottom="@dimen/dimen_12">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_send_white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/get_direction"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_16"
                        android:fontFamily="@font/metropolis_semibold"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>