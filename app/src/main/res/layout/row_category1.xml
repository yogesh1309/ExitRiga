<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:id="@+id/layout_main1"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">
                        <com.cw.exitriga.Utils.RoundRectCornerImageView
                            android:id="@+id/img_bg1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_accomodation"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/transparet"
                            android:padding="15dp">
                            <TextView
                                android:id="@+id/txt_name1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Accomodation"
                                android:textSize="@dimen/text_12"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                android:fontFamily="@font/metropolis_semibold" />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_main3"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">
                        <com.cw.exitriga.Utils.RoundRectCornerImageView
                            android:id="@+id/img_bg3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_all"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/transparet"
                            android:padding="15dp">
                            <TextView
                                android:id="@+id/txt_name3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="All"
                                android:textSize="@dimen/text_12"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                android:fontFamily="@font/metropolis_semibold" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:id="@+id/layout_main2"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="305dp">
                        <com.cw.exitriga.Utils.RoundRectCornerImageView
                            android:id="@+id/img_bg2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_active_recreation"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/transparet"
                            android:padding="15dp">
                            <TextView
                                android:id="@+id/txt_name2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Active recreation"
                                android:textSize="@dimen/text_12"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                android:fontFamily="@font/metropolis_semibold" />
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
</LinearLayout>